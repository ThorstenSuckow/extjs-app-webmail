{

    "name": "app-cn_mail",

    "sencha": {
        "coon-js" : {"packageController" : true},
        "namespace": "conjoon.cn_mail",
        "type": "code",
        "toolkit": "classic",
        "creator": "conjoon Open Source Project",
        "summary": "Basic UI providing email client functionality.",
        "detailedDescription": "This package contains an email client to be used with the conjoon project. It heavily relies on the functionality of the legacy webmail client, here updated for ExtJS 6.*. Requires packages lib-cn_comp, ux.",
        "version": "1.0.0",
        "compatVersion": "1.0.0",
        "format": "1",
        "slicer": {
            "js": [
                {
                    "path": "${package.dir}/sass/example/custom.js",
                    "isWidgetManifest": true
                }
            ]
        },
        "output": {
            "base" : "${package.dir}/build",
            "js" : {
                "version" : "ES6"
            }
        },
        "compressor": {
            "polyfills": "none"
        },
        "local": true,
        "theme": "theme-cn_default",
        "sass" : {
            "namespace": "conjoon.cn_mail",
            "etc": [
                "${package.dir}/sass/etc/all.scss"
            ],

            "var": [
                "${package.dir}/sass/var/"
            ],

            "src": [
                "${package.dir}/sass/src/"
            ]
        },
        "example": null,
        "classpath": [
            "${package.dir}/src",
            "${package.dir}/${toolkit.name}/src"
        ],
        "overrides": null,
        "framework": "ext",
        "requires": [
            "lib-cn_comp"
        ]
    }
}
