{
    "name": "app-cn_mail",
    "sencha": {
        "coon-js": {
            "package": {
                "controller": true,
                "config": {
                    "resources": {
                        "templates": {
                            "html": {
                                "editor": "resources/templates/html/editor.html.tpl",
                                "reader": "resources/templates/html/reader.html.tpl"
                            }
                        }
                    }
                }
            }
        },
        "namespace": "conjoon.cn_mail",
        "type": "code",
        "toolkit": "classic",
        "creator": "conjoon Open Source Project",
        "summary": "Webmail client for conjoon.",
        "detailedDescription": "This package contains an email client to be used with the conjoon project.",
        "version": "1.0.0",
        "compatVersion": "1.0.0",
        "format": "1",
        "slicer": {
            "js": [
                {
                    "path": "${package.dir}/sass/example/custom.js",
                    "isWidgetManifest": true
                }
            ]
        },
        "output": {
            "base": "${package.dir}/build",
            "js": {
                "version": "ES8"
            }
        },
        "language": {
            "js": {
                "input": "ES8",
                "output": "ES8"
            }
        },
        "compressor": {
            "type": "closure",
            "polyfills": "none"
        },
        "local": true,
        "theme": "theme-cn_material",
        "sass": {
            "namespace": "conjoon.cn_mail",
            "etc": [
                "${package.dir}/sass/etc/all.scss"
            ],
            "var": [
                "${package.dir}/sass/var/"
            ],
            "src": [
                "${package.dir}/sass/src/"
            ]
        },
        "example": null,
        "classpath": [
            "${package.dir}/src",
            "${package.dir}/${toolkit.name}/src"
        ],
        "overrides": null,
        "framework": "ext",
        "requires": [
            "lib-cn_comp"
        ]
    },
    "devDependencies": {
        "eslint": "^7.27.0",
        "git-hooks": "^1.1.10"
    },
    "gitHooks": {
        "pre-commit": "lint-staged"
    },
    "lint-staged": {
        "*.js": [
            "eslint",
            "git add"
        ]
    }
}
